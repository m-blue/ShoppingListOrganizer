<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/nameList"
        android:layout_width="154dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/categoryList">

    </ListView>

    <ListView
        android:id="@+id/categoryList"
        android:layout_width="128dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/nameList"
        app:layout_constraintTop_toTopOf="@+id/priceList" />

    <ListView
        android:id="@+id/priceList"
        android:layout_width="97dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toEndOf="@+id/categoryList"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:text="New"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>